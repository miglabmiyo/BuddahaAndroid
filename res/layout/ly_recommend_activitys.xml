<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.miglab.buddha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_activitys"
        style="@style/tv_recommend_title"
        android:text="@string/buddha_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128.67dip"
        android:layout_margin="10dip"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/iv_activity1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:layout_marginRight="5dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/iv_activity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dip"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_activity3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>